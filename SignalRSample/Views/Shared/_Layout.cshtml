    <meta property="og:title" content="SignalR - Chat App" />
    <meta property="og:description" content="This is a Chat App using SignalR - Web Sockets" />
    <meta property="og:image" content="https://www.google.com/url?sa=i&url=https%3A%2F%2Fdignitas.digital%2Fblog%2Freal-time-communication-with-signalr%2F&psig=AOvVaw1SQGk-YktT7j6JHx0KGnwe&ust=1686050323759000&source=images&cd=vfe&ved=0CBAQjRxqFwoTCLjIzIeBrP8CFQAAAAAdAAAAABAj" />
    <meta property="og:url" content="https://signalrchatappp.azurewebsites.net/" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SignalRSample.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="//cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css" />
