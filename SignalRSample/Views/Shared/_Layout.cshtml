                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Notification">Notification</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="BasicChat">Basic Chat</a>
                        </li>*@
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Chat">Chat</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="AdvancedChat">Advanced Chat</a>
                        </li>
